<body class="bg-gray-200 font-sans">

    <div class="text-center mt-10">
        <h1 class="text-3xl text-blue-500 font-bold">Formulir Validasi JavaScript</h1>
        <p class="text-xl mt-3">Pastikan semua data diisi dengan benar.</p>
    </div>

    <div class="max-w-md mt-10 bg-white rounded px-4 py-4 shadow-md">
        <form id="myForm" onsubmit="return validasiForm()">
            <label class="block font-bold mb-1">Nama:</label>
            <input type="text" id="nama" class="border w-full px-4 py-2 rounded mb-3" placeholder="Masukkan nama Anda">

            <label class="block font-bold mb-1">Email:</label>
            <input type="email" id="email" class="border w-full px-4 py-2 rounded mb-3" placeholder="nama@domain.com">

            <label class="block font-bold mb-1">Password:</label>
            <input type="password" id="password" class="border w-full px-4 py-2 rounded mb-3" placeholder="Minimal 8 karakter">

            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded w-full mt-3">
                Kirim
            </button>
        </form>

        <p id="pesan" class="text-center mt-3 text-red-500 font-bold"></p>
    </div>

    <script>
        function validasiForm() {
            const nama = document.getElementById("nama").value.trim();
            const email = document.getElementById("email").value.trim();
            const password = document.getElementById("password").value.trim();
            const pesan = document.getElementById("pesan");

            pesan.textContent = "";

            if (!nama || !email || !password) {
                pesan.textContent = "Semua kolom wajib diisi.";
                return false;
            }

            const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;
            if (!emailRegex.test(email)) {
                pesan.textContent = "Format email tidak valid.";
                return false;
            }

            if (password.length < 8) {
                pesan.textContent = "Password minimal 8 karakter.";
                return false;
            }

            alert("Form berhasil dikirim.\nNama: " + nama + "\nEmail: " + email);
            return true;
        }
    </script>

</body>
